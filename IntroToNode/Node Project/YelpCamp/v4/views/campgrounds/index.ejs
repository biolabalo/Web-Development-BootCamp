<%include ../partials/header %>

    <header class="jumbotron">
        <div class="container">
            <h1>Ola! Welcome to YelpCamp!</h1>
            <p>Find your best campgrounds here..</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a new campground site</a>
            </p>    
        </div>
    </header>
    <div class="row">
        <div class="col-lg-12">
            <h3>Our most opted camp sites.</h3>
        </div>
    </div>
    
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= campground.imageURL%>"></img>
                <div class="caption">
                    <h4><%= campground.name %></h4>    
                </div>
                <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">More info</a>
            </div>
        </div>
    <% }) %>
    </div>
    
    
    
</div>
<%include ../partials/footer %>