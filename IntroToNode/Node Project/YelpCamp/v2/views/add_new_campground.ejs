<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Add a new campground to the site.</h1>
        <div style="width:30%;margin:25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Enter campsite name">    
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="imageURL" placeholder="Enter campsite image URL">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Add</button>
                </div>
            </form>  
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>

<% include partials/footer %>