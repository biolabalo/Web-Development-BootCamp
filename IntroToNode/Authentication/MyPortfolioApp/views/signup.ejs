<% include ./partials/header %>
<div class="container">
    <div class="row">
        <h3 style="text-align:center">Get in touch with Mr.Shetty</h3>
        <div style="width:30%;margin:25px auto;">
            <form action="/signup" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="Enter username">    
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="Enter password">
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="emailId" placeholder="Enter emailid">    
                </div>
                <div class="form-group">
                    <Textarea class="form-control" name="personalMsg" placeholder="How do you know me?"></Textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-default btn-block btn-md">
    				    <i class="fa fa-user-plus" aria-hidden="true"></i> 
    				   Signup
    				</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ./partials/footer %>